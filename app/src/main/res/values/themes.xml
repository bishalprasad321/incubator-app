<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Incubator" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="android:statusBarColor">@color/dark_background</item>
    </style>

    <style name="Theme.Incubator" parent="Base.Theme.Incubator" />

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/dark_background</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/tab_layout_bg</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Customize positive button -->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveButtonStyle</item>

        <!-- Customize negative button -->
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeButtonStyle</item>

    </style>

    <style name="MyPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="MyNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_accent</item>
    </style>
</resources>