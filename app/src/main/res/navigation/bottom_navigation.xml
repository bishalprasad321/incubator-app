<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bishal.incubator.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.bishal.incubator.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <activity
        android:id="@+id/addActivity"
        android:name="com.bishal.incubator.AddPostActivity"
        android:label="activity_add_post"
        tools:layout="@layout/activity_add_post"/>

    <fragment
        android:id="@+id/incubatesFragment"
        android:name="com.bishal.incubator.fragments.IncubatesFragment"
        android:label="fragment_incubates"
        tools:layout="@layout/fragment_incubates" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.bishal.incubator.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.bishal.incubator.fragments.NotificationFragment"
